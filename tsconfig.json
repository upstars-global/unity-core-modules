{
    "compilerOptions": {
        "module": "ESNext",
        "target": "esnext",
        "moduleResolution": "Bundler",
        "lib": [
            "dom",
            "es6",
            "esnext",
            "esnext.asynciterable"
        ],
        "allowJs": true,
        "strict": false,
        "rootDir": "./src",
        "baseUrl": "./src",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "noImplicitAny": true,
        "types": []
    },
    "include": [
        "**/*"
    ],
    "exclude" : ["node_modules"]
}
